<h1>Cran Packages</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Package name</th>
      <th>Version</th>
      <th>Title</th>
      <th>Authors</th>
      <th></th>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td class="col-md-1"><%= package.name %></td>
        <td class="col-md-1"><%= package.version %></td>
        <td class="col-md-5"><%= package.title %></td>
        <td class="col-md-4"><%= package.authors %></td>
        <td class="col-md-1"><%= link_to 'Show', package %></td>
    <% end %>
  </tbody>
</table>
